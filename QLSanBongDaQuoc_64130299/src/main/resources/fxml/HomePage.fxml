<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Thanh điều hướng -->
    <top>
        <MenuBar style="-fx-background-color: #4CAF50;">
            <Menu style="-fx-text-fill: white;" text="Quản lý">
                <MenuItem text="Đặt sân" />
                <MenuItem text="Sân bóng" />
                <MenuItem text="Hóa đơn" />
                <MenuItem text="Bảo trì" />
                <MenuItem text="Người dùng" />
            </Menu>
            <Menu style="-fx-text-fill: white;" text="Tài khoản">
                <MenuItem text="Đăng xuất" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Chế độ chia tab chính -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <!-- Tab Quản lý Đặt sân -->
            <Tab text="Đặt sân">
                <VBox spacing="10">
                    <TableView fx:id="bookingsTable" style="-fx-background-color: white;">
                        <!-- Cột thông tin đặt sân -->
                    </TableView>
                    <HBox alignment="CENTER" spacing="10">
                        <Button style="-fx-font-size: 14px;" text="Thêm đặt sân" />
                        <Button style="-fx-font-size: 14px;" text="Sửa đặt sân" />
                        <Button style="-fx-font-size: 14px;" text="Xóa đặt sân" />
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab Quản lý Sân bóng -->
            <Tab text="Sân bóng">
                <VBox spacing="10">
                    <TableView fx:id="fieldsTable" style="-fx-background-color: white;">
                        <!-- Cột thông tin sân bóng -->
                    </TableView>
                    <HBox alignment="CENTER" spacing="10">
                        <Button style="-fx-font-size: 14px;" text="Thêm sân bóng" />
                        <Button style="-fx-font-size: 14px;" text="Sửa sân bóng" />
                        <Button style="-fx-font-size: 14px;" text="Xóa sân bóng" />
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab Quản lý Hóa đơn -->
            <Tab text="Hóa đơn">
                <VBox spacing="10">
                    <TableView fx:id="invoicesTable" style="-fx-background-color: white;">
                        <!-- Cột thông tin hóa đơn -->
                    </TableView>
                    <HBox alignment="CENTER" spacing="10">
                        <Button style="-fx-font-size: 14px;" text="Thêm hóa đơn" />
                        <Button style="-fx-font-size: 14px;" text="Sửa hóa đơn" />
                        <Button style="-fx-font-size: 14px;" text="Xóa hóa đơn" />
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab Quản lý Bảo trì -->
            <Tab text="Bảo trì">
                <VBox spacing="10">
                    <TableView fx:id="maintenanceTable" style="-fx-background-color: white;">
                        <!-- Cột thông tin bảo trì -->
                    </TableView>
                    <HBox alignment="CENTER" spacing="10">
                        <Button style="-fx-font-size: 14px;" text="Thêm yêu cầu bảo trì" />
                        <Button style="-fx-font-size: 14px;" text="Sửa yêu cầu bảo trì" />
                        <Button style="-fx-font-size: 14px;" text="Xóa yêu cầu bảo trì" />
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab Quản lý Người dùng -->
            <Tab text="Người dùng">
                <VBox spacing="10">
                    <TableView fx:id="usersTable" style="-fx-background-color: white;">
                        <!-- Cột thông tin người dùng -->
                    </TableView>
                    <HBox alignment="CENTER" spacing="10">
                        <Button style="-fx-font-size: 14px;" text="Thêm người dùng" />
                        <Button style="-fx-font-size: 14px;" text="Sửa người dùng" />
                        <Button style="-fx-font-size: 14px;" text="Xóa người dùng" />
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Footer (Có thể để thông tin bản quyền hoặc các liên kết) -->
    <bottom>
        <Label style="-fx-text-fill: #999999; -fx-font-size: 12px;" text="© 2024 Your Company Name" />
    </bottom>
</BorderPane>
