    <dependency>
        <groupId>org.apache.poi</groupId>
        <artifactId>poi-ooxml</artifactId>
        <version>5.2.3</version> <!-- Phiên bản mới nhất tính đến thời điểm này -->
    </dependency>

    <dependency>
        <groupId>org.apache.poi</groupId>
        <artifactId>poi-ooxml-schemas</artifactId>
        <version>4.1.2</version> <!-- Phiên bản ổn định -->
    </dependency>

    <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-collections4</artifactId>
        <version>4.4</version> <!-- Phiên bản ổn định -->
    </dependency>
    </dependencies>
    <build>
    <plugins>
        <plugin>
            <groupId>org.openjfx</groupId>
            <artifactId>dat.nx.sanbongdaquoc</artifactId>
            <version>0.0.8</version>
            <configuration>
                <mainClass>app.Main</mainClass>
                <jvmArgs>
                    --module-path "E:\javafx-sdk-23\lib" --add-modules javafx.controls,javafx.fxml
                </jvmArgs>
            </configuration>
        </plugin>
    </plugins>
</build>
</project>